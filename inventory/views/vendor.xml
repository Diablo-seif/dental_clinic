<odoo>
  <data>

        <record id="view_vendor_inventory_form" model="ir.ui.view">
                <field name="name">vendor.inventory.form</field>
                <field name="model">vendor.inventory</field>
                <field name="arch" type="xml">
                    <form string="vendor_form">
                        <sheet>
                                    <div class="oe_title">
                                        <group>
                                                <group>
                                                        <label for ="name"/>
                                                        <h1>  <field name="name"/> </h1>
                                                        <label for ="company_name"/>
                                                        <h3>  <field name="company_name"/> </h3>
                                                </group>
                                                <group>
                                                    <label for ="phone"/>
                                                    <h1>  <field name="phone"/> </h1>
                                                </group>
                                            </group>
                                    </div>
                                    <separator string="products"/>
                                                <field name="products_ids">
                                                <tree editable="bottom">
                                                    <field name="product_id"/>
                                                    <field name="measurement_types"/>
                                                    <field name="date_of_receipt" optional="1" />
                                                    <field name="expiration_date" optional="1" />
                                                    <field name="quantity"/>
                                                    <field name="cost"/>
                                                    <field name="total_cost" sum="total_cost"/>
                                                    <field name="pay" sum="pay"/>
                                                    <field name="difference" optional="1" readonly="1" sum="difference"/>
                                                </tree>
                                            </field>

                        </sheet>
                    </form>
                </field>
            </record>

        <record id="view_vendor_inventory_tree" model="ir.ui.view">
            <field name="name">vendor.inventory.tree</field>
            <field name="model">vendor.inventory</field>
            <field name="arch" type="xml">
                  <tree>
                        <field name="name"/>
                        <field name="phone"/>
                  </tree>
              </field>
          </record>

        <record id="view_vendor_inventory_kanban"   model="ir.ui.view">
            <field name="name">vendor.inventory.kanban</field>
            <field name="model">vendor.inventory</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="company_name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_content">

                                        <div style="margin-bottom:4px;">
                                              ðŸ‘¤ Person:  <field name="name"/>
                                        </div>
                                        <div>
                                              ðŸ’¼ Company: <field name="company_name"/>
                                        </div>
                                        <div>
                                                ðŸ“± Phone: <field name="phone"/>
                                        </div>


                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
    </record>


        <record id="view_vendor_search" model="ir.ui.view">
            <field name="name">vendor.inventory.search</field>
            <field name="model">vendor.inventory</field>
            <field name="arch" type="xml">
                <search string="Search vendors">
                    <!-- Search fields -->
                    <field name="name" string="Name"/>
                    <field name="phone" string="Phone"/>
                </search>
            </field>
        </record>

      <record id="action_vendor_inventory" model="ir.actions.act_window">
          <field name="name">Vendors</field>
          <field name="res_model">vendor.inventory</field>
          <field name="view_mode">kanban,tree,form</field>
      </record>

  </data>
</odoo>